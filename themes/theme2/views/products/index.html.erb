<% title "产品中心" %> 

<div id="bd_leftg"></div>
<div id="bd_rightg">
    
    <div id="products" class="right_content">
      <div class="wrapper">
        <h3>最新产品</h3>
        <ul id="list-view">
        <% @products.each do |product| %>
          <li class='product'>
            <div class="img-wrap">
              <%= link_to(image_tag(product.avatar.url(:thumb)), product) %>
            </div>
            <h5><%= link_to product.name, product %></h5>
            
          </li> 
        <% end %>
      </ul>
    </div><!-- end:#products -->
    
</div>

<%= paginate @products -%> 

<%= content_for :sidebar do -%>
    <%= render :partial => "/products/search" %>
    <%= render :partial => "/products/categories_bar" %>
    <%= render :partial => "/products/recommend_products" %>
<% end -%>
