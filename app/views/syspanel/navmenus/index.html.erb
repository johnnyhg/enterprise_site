<% title "网站导航设置" %>
<h2>网站导航设置</h2>
<%= render :partial => "/syspanel/shared/setting_tab" %>
<ul  id="navmenu_list_sortable">
  <% @navmenus.each do |navmenu| %>
    <li id="menu_<%= navmenu.id %>" data-id="<%= navmenu.id %>" ><%= navmenu.label %></li>
  <% end %>  
</ul>

<a id="enable_navmenu_list_sortable" href="#" title="菜单排序" >菜单排序</a>
<a id="done_navmenu_list_sortable" href="#" title="保存菜单排序" style="display:none" >保存菜单排序</a>
<table class="list">
  <tr>
    <th>链接标题</th>
    <th>链接URL</th>
    <th>链接提示</th>
    <th>是否显示</th>
    <th>是否在新窗口中打开</th>
    <th></th>
  </tr>

<% @navmenus.each do |navmenu| %>
  <tr>
    <td><%= navmenu.label %></td>
    <td><%= navmenu.url %></td>
    <td><%= navmenu.link_title %></td>
    <td align="center"><%= navmenu.is_display %></td>
    <td align="center"><%= navmenu.open_in_new_window? ? "是" : "否" %></td>
    <td align="center"><%= link_to '修改', edit_syspanel_navmenu_path(navmenu) %> - <%= link_to '删除', [:syspanel, navmenu], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '添加导航菜单项', new_syspanel_navmenu_path %>
