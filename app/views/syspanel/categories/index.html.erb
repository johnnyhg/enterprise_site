<% title "产品分类管理" %>
<h2>产品分类</h2>
<%= render :partial => "/syspanel/shared/setting_tab" %>
<table class="list">
  <tr>
    <th>分类名称</th>
    <th width="70">层次</th>

    <th width="80">操作</th>
  </tr>
<% Category.each_with_level(Category.root.descendants) do |category, level| %>
  <tr>
    <td><div style="margin-left:<%= 30 * level %>px;"><%= category.name %></div></td>
    <td align="center"><%= category.depth %></td>

    <td align="center"><%= link_to '编辑', edit_syspanel_category_path(category) %> <%= link_to '删除', [:syspanel, category], :confirm => '你确定吗?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '添加分类', new_syspanel_category_path %>
