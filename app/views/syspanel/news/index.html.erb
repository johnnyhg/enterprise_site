<% title "新闻管理" %>
<h2><%= News.model_name.human %>列表</h2>

<table class="list">
  <tr>                 
    <th width="120">新闻ID</th>
    <th>新闻标题</th>
    <th  width="90">阅读次数</th>
    <th width="180">发布时间</th>
    <th width="180">操作</th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td align="center"><%= news.id %></td> 
    <td><%= news.title %></td>          
    <td align="center"><%= news.click_count %></td>
    <td align="center"><%= news.created_at.to_s(:db) %></td>
    <td align="center"><%= link_to '查看', [:syspanel, news] %> － <%= link_to '编辑', edit_syspanel_news_path(news) %> － <%= link_to '删除', [:syspanel, news], :confirm => '你要删除此新闻?', :method => :delete %></td>
  </tr>
<% end %>
</table> 
<%= paginate @news -%>

<br />

<%= link_to t(:post_a_news, :default => "发布新闻"), new_syspanel_news_path %>
