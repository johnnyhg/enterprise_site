<!DOCTYPE html>
<html>
<head>
  <title>EnterpriseSite</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="wrapper">
    <div id="header">
    </div>

    <div id="nav">
      <ul>
        <li><%= link_to "Home", root_path %></li> 
        <li><%= link_to "Notices", notices_path %></li> 
      </ul>
    </div>

    <div id="main">
      <div id="content">
        <%= yield %>
      </div>

      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>

    <div id="footer">
    </div>
</body>
</html>
