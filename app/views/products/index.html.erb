<% title "产品中心" %> 

<div id="products">
  <div class="wrapper">
    <h3>最新产品</h3>
    <% @products.each do |product| %>
      <div class='product'>
        <%= link_to(image_tag(product.avatar.url(:thumb)), product) %>
        <h4><%= link_to product.name, product %><h4>
      </div> 
    <% end %>
  </div>
</div><!-- end:#products -->

<%= will_paginate @products %> 


<% content_for :sidebar do %>
  <div class="box">
    <h3>产品分类</h3>
    <div>
      <ul>
        <% category_level = Category.category_level %>
        <% Category.root.children.each do |category| %>
        <% if category_level == 1 %>
          <li><%= link_to category.name, category_product_path(category) %></li>                   
        <% elsif category_level == 2 %>
          <li>
            <%= link_to category.name, category_product_path(category) %>
            <div>
            <% category.children.each do |category1| %>
              <em><%= category1.name %></em>
            <% end %>
            </div>
          </li>  
          <% end %>
        <% end %>
      </ul>
    </div>
