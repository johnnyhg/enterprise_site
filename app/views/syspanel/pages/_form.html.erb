<%= form_for([:syspanel, @page]) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2>发生如下错误:</h2>
      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :style => "width: 400px;" %>
  </div>
  <div class="field">
    <%= f.label :keywords %><br />
    <%= f.text_field :keywords, :style => "width: 400px;" %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description, :style => "width: 400px;" %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :class => "wymeditor" %>
  </div>
  <div class="field">
    <%= f.label :url_slug %><br />
    <%= f.text_field :url_slug %>(eg: /pages/our-servers)
  </div>

  <div class="field">
    <%= f.label :is_published %>
    <%= f.check_box :is_published %>
  </div>
  <div class="actions">
    <%= f.submit "提交", :class => "wymupdate" %> － <%= link_to t(:label_back), syspanel_pages_path %>
  </div>
<% end %>

<%= content_for :html_head do %>
  <%= javascript_include_tag "wymeditor/jquery.wymeditor.min.js" %>

<% end %>
