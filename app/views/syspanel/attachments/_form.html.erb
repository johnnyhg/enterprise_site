<%= form_for([:syspanel, @attachment], :html => { :multipart => true } ) do |f| %>
  <% if @attachment.errors.any? %>
    <div id="error_explanation">
      <h2>发生以下错误：</h2>

      <ul>
      <% @attachment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :descripton %><br />
    <%= f.text_area :descripton %>
  </div>
  <div class="field">
    <%= f.label :attach %><br />
    <%= f.file_field :attach %>
  </div>
  <div class="actions">
    <%= f.submit %> - <%= link_to t(:label_back), syspanel_attachments_path %>
  </div>
<% end %>
