<% title "网站配置" %>
<h2>网站配置</h2>

<table class="list">
  <tr>
    <th>配置名称</th>
    <th>参数KEY</th>
    <th>参数值</th>
    <th>备注</th>
    <th></th>
  </tr>

<% @my_setting_items.each do |site_setting| %>
  <tr>
    <td><%= t("view.settings.#{site_setting.first}") -%></td>
    <td><%= site_setting.first %></td>
    <td><%= site_setting.last %></td>
    <td></td>
    
    <td align="center"><%= link_to '修改', edit_syspanel_site_setting_path(:id => site_setting.first) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '添加配置参数', new_syspanel_site_setting_path %> 

<%= content_for :sidebar do %>
  <%= render :partial => "/syspanel/site_settings/sidebar" %>
<% end %>
